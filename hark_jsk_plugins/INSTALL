./autogen.sh
./configure --prefix=/usr --with-hark-inc=path/to/hark-inc/include/hark --enable-ros --with-harkio2-inc=path/to/harkio2-inc/include/harkio2 --with-harkio2-lib=path/to/harkio2-inc/include/harkio2/ --enable-harkio2
